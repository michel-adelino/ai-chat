# Supabase (from Supabase Dashboard → Project Settings → API)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
# Required only for Stripe webhook (updates users table; service role bypasses RLS)
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Stripe (from Stripe Dashboard → Developers → API keys)
STRIPE_SECRET_KEY=sk_test_...
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_...
# Webhook signing secret: Stripe Dashboard → Webhooks, or `stripe listen` for local
STRIPE_WEBHOOK_SECRET=whsec_...

# OpenAI (from https://platform.openai.com/api-keys)
OPENAI_API_KEY=sk-...

# App URL (for Stripe success/cancel and webhook base; use http://localhost:3000 locally)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Optional: Stripe Price ID for subscription (Stripe Dashboard → Products → Price)
NEXT_PUBLIC_STRIPE_PRICE_ID=price_...
